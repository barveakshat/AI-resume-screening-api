# ======================================
# ENVIRONMENT VARIABLES
# ======================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to git!

# ======================================
# Spring Profile
# ======================================
SPRING_PROFILES_ACTIVE=dev

# ======================================
# Database Configuration (Development)
# ======================================
SPRING_DATASOURCE_PASSWORD=your-local-postgres-password

# ======================================
# Database Configuration (Production)
# ======================================
# Railway/Render will auto-provide these
DATABASE_URL=
DB_USERNAME=
DB_PASSWORD=

# ======================================
# Redis Configuration (Production)
# ======================================
# Railway/Render will auto-provide these
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================================
# AWS S3 Configuration
# ======================================
AWS_S3_BUCKET_NAME=resume-screening-uploads-prod
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# ======================================
# OpenAI/OpenRouter Configuration
# ======================================
OPENAI_API_KEY=your-openai-or-openrouter-api-key
OPENAI_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENAI_MODEL=meta-llama/llama-3.3-70b-instruct:free

# ======================================
# JWT Configuration
# ======================================
# Generate a strong random secret (at least 256 bits)
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long-change-this-in-production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ======================================
# CORS Configuration
# ======================================
# Development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Production (update with your frontend URL)
# CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-frontend.netlify.app

# ======================================
# Server Configuration (Production)
# ======================================
# Railway/Render will auto-provide PORT
PORT=8080

# ======================================
# Optional: Enable Swagger in Production
# ======================================
SWAGGER_ENABLED=false